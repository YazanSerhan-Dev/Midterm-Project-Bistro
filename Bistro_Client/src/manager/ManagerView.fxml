<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="manager.ManagerController"
            prefWidth="900"
            prefHeight="600">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox spacing="10" style="-fx-alignment: CENTER_LEFT;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>
                <Label text="Bistro â€“ Manager Panel"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <!-- ================= LEFT MENU ================= -->
    <left>
        <VBox spacing="10"
              style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>
                <Label text="Manager Actions"
                       style="-fx-font-weight: bold;"/>

                <Button text="Waiting List" onAction="#onViewWaitingList"/>
                <Button text="Reservations" onAction="#onViewReservations"/>
                <Button text="Subscribers" onAction="#onViewSubscribers"/>
                <Button text="Current Diners" onAction="#onViewCurrentDiners"/>

                <Separator/>

                <Button text="Register Customer" onAction="#onRegisterCustomer"/>
                <Button text="Update Tables" onAction="#onUpdateTables"/>
                <Button text="Update Opening Hours" onAction="#onUpdateOpeningHours"/>
                
                <Separator/>
				<Button text="View Reports" onAction="#onViewReports"/>
				<Button text="View Statistics" onAction="#onViewStatistics"/>

            </children>
        </VBox>
    </left>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <children>
                <Label fx:id="lblTitle"
                       text="Welcome Manager"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <TableView fx:id="tblMain"
                           prefHeight="450"
                           prefWidth="600"/>
            </children>
        </VBox>
    </center>

</BorderPane>
