<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="agent.AgentController"
            prefWidth="900"
            prefHeight="600">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox spacing="10" style="-fx-alignment: CENTER_LEFT;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Bistro â€“ Agent Panel"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            </children>
        </HBox>
    </top>

    <!-- ================= LEFT MENU ================= -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #f4f4f4;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>
                <Label text="Agent Actions" style="-fx-font-weight: bold;"/>

                <Button text="Waiting List" onAction="#onViewWaitingList"/>
                <Button text="Reservations" onAction="#onViewReservations"/>
                <Button text="Subscribers" onAction="#onViewSubscribers"/>
                <Button text="Current Diners" onAction="#onViewCurrentDiners"/>

                <Separator/>

                <Button text="Register Customer" onAction="#onRegisterCustomer"/>
                <Button text="Update Tables" onAction="#onUpdateTables"/>
                <Button text="Update Opening Hours" onAction="#onUpdateOpeningHours"/>
            </children>
        </VBox>
    </left>

    <!-- ================= CENTER CONTENT ================= -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <children>
                <Label fx:id="lblTitle"
                       text="Welcome Agent"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <!-- STACK OF TABLES (ONLY ONE VISIBLE AT A TIME) -->
                <StackPane>

                    <TableView fx:id="tblWaitingList"
                               visible="false"
                               managed="false"/>

                    <TableView fx:id="tblReservations"
                               visible="false"
                               managed="false"/>

                    <TableView fx:id="tblSubscibers"
                               visible="false"
                               managed="false"/>

                    <TableView fx:id="tblCurrentDiners"
                               visible="false"
                               managed="false"/>

                </StackPane>
            </children>
        </VBox>
    </center>

</BorderPane>
