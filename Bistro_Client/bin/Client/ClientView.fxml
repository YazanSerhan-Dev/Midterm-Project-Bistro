<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Priority?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Client.ClientController"
            prefWidth="700"
            prefHeight="420">

    <!-- padding around everything -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- ===== TOP: Server IP + Connect / Disconnect ===== -->
    <top>
        <HBox spacing="10">
            <children>
                <Label text="Server IP:"/>
                <TextField fx:id="txtServerIp"
                           prefWidth="180"/>

                <Button fx:id="btnConnect"
                        text="Connect"
                        onAction="#onConnect"/>

                <Button fx:id="btnDisconnect"
                        text="Disconnect"
                        onAction="#onDisconnect"/>
            </children>
        </HBox>
    </top>

    <!-- ===== CENTER: Reservations text area ===== -->
    <center>
        <VBox spacing="5">
            <children>
                <Label text="Reservations from server:"/>
                <TextArea fx:id="txtAreaReservations"
                          wrapText="true"
                          prefRowCount="12"
                          editable="false"
          				focusTraversable="false"
                          VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </center>

    <!-- ===== BOTTOM: Reservation fields + buttons + status ===== -->
    <bottom>
        <VBox spacing="8">
            <children>

                <!-- Row: Reservation #, Date, Guests -->
                <HBox spacing="10">
                    <children>
                        <Label text="Reservation ID:"/>
                        <TextField fx:id="txtReservationNumber" prefWidth="70"/>

                        <Label text="Date (yyyy-mm-dd):"/>
                        <TextField fx:id="txtReservationDate" prefWidth="110"/>

                        <Label text="Guests:"/>
                        <TextField fx:id="txtNumberOfGuests" prefWidth="70"/>
                    </children>
                </HBox>

                <!-- Row: Buttons -->
                <HBox spacing="10">
                    <children>
                        <Button fx:id="btnGetReservations"
                                text="Get Reservations"
                                onAction="#onGetReservations"/>

                        <Button fx:id="btnUpdateReservation"
                                text="Update Reservation"
                                onAction="#onUpdateReservation"/>
                    </children>
                </HBox>

                <!-- Status label -->
                <Label fx:id="lblStatus"
                       text="Status"
                       maxWidth="Infinity"/>

            </children>
        </VBox>
    </bottom>

</BorderPane>



