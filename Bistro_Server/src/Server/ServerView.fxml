<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Server.ServerController"
            prefWidth="650.0" prefHeight="420.0">

    <!-- TOP: server status label -->
    <top>
        <Label fx:id="serverStatusLabel"
               text="Server is stopped"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 14px; -fx-padding: 10 0 10 0;"/>
    </top>

    <!-- CENTER: clients table + log -->
    <center>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <children>

                <TableView fx:id="clientsTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="hostColumn" text="Host Name" prefWidth="200.0"/>
                        <TableColumn fx:id="ipColumn" text="IP Address" prefWidth="200.0"/>
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0"/>
                    </columns>
                </TableView>

                <Label text="Log:"/>
                <TextArea fx:id="logArea"
         				 prefRowCount="6"
         				 editable="false"
          				focusTraversable="false"/>


            </children>
        </VBox>
    </center>

    <!-- BOTTOM: Start / Exit buttons -->
    <bottom>
    	<HBox spacing="10.0" alignment="CENTER_RIGHT">
       	 <padding>
           	 <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
       	 </padding>
       	 <children>
        	    <Button fx:id="startButton" text="Start Server" onAction="#onStartServer"/>
         	   <Button fx:id="stopButton"  text="Stop Server"  onAction="#onStopServer" disable="true"/>
          	  <Button fx:id="exitButton"  text="Exit"         onAction="#onExit"/>
       	 </children>
   		 </HBox>
	</bottom>


</BorderPane>





