<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Server.ServerController"
            prefWidth="650.0" prefHeight="420.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- ===== Top title bar ===== -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: #2b2d42;">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

            <Label text="Bistro Server"
                   style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Label text="â€¢ listening for client connections"
                   style="-fx-text-fill: #d3d3d3; -fx-font-size: 12px;"/>
        </HBox>
    </top>

    <!-- ===== Center: log area with label ===== -->
    <center>
        <VBox spacing="6" alignment="CENTER">
            <padding>
                <Insets top="15" right="15" bottom="10" left="15"/>
            </padding>

            <Label text="Server log:"
                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;"
                   alignment="CENTER_LEFT"
                   maxWidth="Infinity"/>

            <TextArea fx:id="logArea"
                      editable="false"
                      wrapText="true"
                      prefRowCount="16"
                      VBox.vgrow="ALWAYS"
                      style="-fx-control-inner-background: #ffffff; -fx-font-family: 'Consolas'; -fx-font-size: 12px;"/>
        </VBox>
    </center>

    <!-- ===== Bottom bar: port + button ===== -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT"
              style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>

                        <Label text="Port: 5555"
                   style="-fx-text-fill: #444444; -fx-font-size: 12px"/>

            <Pane HBox.hgrow="ALWAYS"/> <!-- pushes button to the right -->

            <Button fx:id="exitButton"
                    text="Stop Server"
                    onAction="#onExitServer"
                    disable="true"
                    style="-fx-background-color: #d90429; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-padding: 6 18 6 18;
                           -fx-background-radius: 4;"/>

            <Button fx:id="startButton"
                    text="Start Server"
                    onAction="#onStartServer"
                    style="-fx-background-color: #2b2d42; -fx-text-fill: white;
                           -fx-font-weight: bold; -fx-padding: 6 18 6 18;
                           -fx-background-radius: 4;"/>           
        
        </HBox>
    </bottom>

</BorderPane>
